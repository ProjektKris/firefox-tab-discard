{
    "manifest_version": 2,
    "name": "Tab Discard",
    "description": "A simple Firefox tab discarder that relies on keyboard shortcuts for input.",
    "version": "0.1.3",
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["contextMenus", "tabs"],
    "commands": {
        "discard-current-tab": {
            "suggested_key": {
                "default": "Alt+X",
                "mac": "Alt+X"
            },
            "description": "Discard the current tab."
        },
        "discard-all-other-tab": {
            "suggested_key": {
                "default": "Alt+Shift+X"
            },
            "description": "Discard all inactive background tabs that are not selected."
        }
    },
    "browser_action": {
        "browser_style": true,
        "theme_icons": [
            {
                "light": "icons/firefox_delete_light_16.png",
                "dark": "icons/firefox_delete_dark_16.png",
                "size": 16
            },
            {
                "light": "icons/firefox_delete_light_32.png",
                "dark": "icons/firefox_delete_dark_32.png",
                "size": 32
            },
            {
                "light": "icons/firefox_delete_light_64.png",
                "dark": "icons/firefox_delete_dark_64.png",
                "size": 64
            }
        ]
    }
}
